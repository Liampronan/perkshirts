<div class="container">
  <h1>Pick a <%= @products['name'].singularize %></h1>

  <p id="notice"><%= notice %></p>

  <% @products['products'].in_groups_of(3, false).each do |group| %>
      <div class="row product">
        <% group.each do |product| %>
            <div class="col-sm-3 col-sm-offset-1" >
              <a href="<%= show_product_url product['id'] %>">
                <%= image_tag(product['image']['url'], class: 'img-rounded') if product['image']  %>
                <h4><%= product['name'] %></h4>
              </a>
            </div>

        <% end %>
      </div>
  <% end %>
  <a href="<%= categories_path%>"><button type="button" class="btn btn-default btn-lg">Back to Categories</button></a>

</div>
